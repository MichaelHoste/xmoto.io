<% @levels.each do |level| %>
  <% if !level.preview.thumb.file %>
    <%= link_to level.file_name, level_path(level) %>
  <% else %>
    <%= link_to level_path(level) do %>
      <%= image_tag(level.preview.url(:thumb).gsub('.png', '.jpg')) %>

      <canvas id="level_<%= level.id %>"
              width="400"
              height="250"
              data-current-level="<%= level.file_name %>"
              data-current-level-id="<%= level.id %>"
              data-replay-file="<%= level.level_user_links.try(:first).try(:id) %>.replay">
      </canvas>
    <% end %>
  <% end %>

  <% if level.level_user_links.where(:user_id => current_user.id).present? %>
  <% end %>
  <br/>
<% end %>
