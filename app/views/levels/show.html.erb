<% content_for :current_user_best_score_id, @best_score.id.to_s %>

<div style="position: relative;left: -500px;margin-left: 50%;margin-top: 20px;">
  <canvas id="game"   width="1000" height="600" data-current-level="<%= @level.file_name %>"></canvas>
  <canvas id="buffer" width="1500" height="900" style="display:none"></canvas>

  <div id="loading" style="position:absolute;top:100px;width:1000px;text-align:center">
    Loading, please wait...
  </div>

  <div id="chrono" style="position:absolute;top:20px;left:872px;font-size:20px;background-color:black;color:white;padding:10px;width:104px;opacity:0.5;text-align:center">
    0:00
  </div>
</div>
